<%= form_for(@need) do |f| %>
  <p>
    <%= f.label :short_description, t(:short_description) %><br />
    <%= f.text_field :short_description %>
  </p>
  <p>
    <%= f.label :sphere, t(:sphere) %><br />
	<%= f.select :sphere, Need::I18n.translate(:SPHERE_TYPES) %>
  </p>  
  <p>
    <%= f.label :long_description, t(:long_description) %><br />
	<%= f.text_area :long_description %>
  </p>	
  <p>
    <%= f.label :deadline, t(:deadline) %><br />
	<%= f.date_select :deadline, :order => [:day, :month, :year] %>
  </p>
    <%= f.label :executed, t(:executed) %><br />
    <%= f.check_box :executed %>
  <br />
  <p>
  </p>
  <p>
    <%= f.label :who_executed, t(:Who_executed) %><br />
	<%= f.select :who_executed, users_names %>
  </p>	
  <p>
    <%= f.label :when_executed, t(:When_executed) %><br />
	<%= f.date_select :when_executed, :order => [:day, :month, :year] %>
  </p>
  <p>
    <%= f.submit t(:Update_Need), class: "btn btn-large btn-primary" %>
  </p>
<% end %>