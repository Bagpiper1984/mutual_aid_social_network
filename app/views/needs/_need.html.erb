<li>
  <p>
    <strong><%= t(:Short_description) %> </strong><%= need.short_description %>
  </p>

  <p>
    <strong><%= t(:Sphere) %> </strong><%= need.sphere %>
  </p>
  
  <p>  
    <strong><%= t(:Long_description) %> </strong><%= need.long_description %>
  </p>
  
  <p>  
    <strong><%= t(:Deadline) %> </strong><%= need.deadline.to_s(:ru_datetime) %>
  </p>
  
  <% if need.executed? %>
    <p> 
	  <strong><%= t(:Executed!) %> </strong> 
	</p>
	
	<p>  
      <strong><%= t(:Who_executed) %> </strong> <%= User.find(need.who_executed).name + " " + User.find(need.who_executed).surname %>
    </p>
	
	<p>  
      <strong><%= t(:When_executed) %> </strong><%= need.when_executed.to_s(:ru_datetime) %>
    </p>
  <% end %>
  
  <% if current_user?(need.user) %>
    <%= link_to t(:edit), edit_need_path(need) %> |
    <%= link_to t(:delete), need, method: :delete,
                                     data: { confirm: t(:Are_you_sure?) } %>
  <% end %>
</li>