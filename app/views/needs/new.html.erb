<%= form_for(@need) do |f| %>
  <p>
    <%= f.label :short_description %><br />
    <%= f.text_field :short_description %>
  </p>
  <p>
    <%= f.label :sphere %><br />
	<%= f.select :sphere, Need::SPHERE_TYPES %>
  </p>  
  <p>
    <%= f.label :long_description %><br />
	<%= f.text_area :long_description %>
  </p>	
  <p>
    <%= f.label :deadline %><br />
	<%= f.date_select :deadline %>
  </p>
  <p>
    <%= f.submit "Create Need" %>
  </p>
<% end %>