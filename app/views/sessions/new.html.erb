<% if flash[:alert] %>
  <p id="notice"><%= flash[:alert] %></p>
<% end %>

<h1>Sign In</h1>

<%= form_tag do %>
  <div>
	<%= label_tag :login, 'Login:' %>
	<%= text_field_tag :login, params[:login] %>
  </div>
  <div>
	<%= label_tag :password, 'Password:' %>
	<%= password_field_tag :password, params[:password] %>
  </div>
  <div>
  <%= submit_tag "Login" %>
  </div>
<% end %>
